{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "**.html", // لبناء ملفات HTML الثابتة من الجذر (بما في ذلك index.html)
      "use": "@vercel/static"
    },
    {
      "src": "**.js", // لبناء ملفات JS الثابتة (Scripts) من الجذر
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // لتوجيه كل طلبات API إلى سيرفر Node.js
      "dest": "server.js"
    },
    {
      "src": "/", // عند زيارة الرابط الرئيسي (Homepage)
      "dest": "index.html" // توجيه مباشر إلى ملف index.html
    },
    {
      "src": "/(.*)", // لجميع الأصول الأخرى (CSS, صور، ملفات JS)
      "dest": "/$1"
    }
  ]
}